
<div class="row">
<div class="col-md-6 main_search col-md-offset-3">
<h1 class="text-center txt-color"><strong>Property Search in all Over The World</strong></h1>
<h2 class="text-center txt-color"><strong>Find Apartments, Houses, Lands, Shops, Offices and other Commercial Property in all Federal States</strong></h2>
<br><br>


<%= form_tag pdetails_path, :method => 'get' do  %>
<div class="form-group">
<div class="right-search-icon">
<span><h1><i class="entypo-search"></i></h1></span>
<%= text_field_tag :search, params[:search], class: "form-control search-input", placeholder: "e.g. Apartments for Rent, House, Lands" %>
</div>
</div>
<% end %>


</div>
</div>
<!-- end of 1st container -->

